
<div class="row">
  <div class='col-sm-6'>
    <%= form_for @list do |f| %>
      <%= f.label :item_name, "Task Name" %>
      <%= f.text_field :item_name %>
      <%= f.label :due_date, "Due Date" %>
      <%= f.text_field :due_date, "data-provide" => 'datepicker', id: "picker" %>
      <%= f.label :memo, "Memo" %>
      <%= f.text_area :memo %>
      <%= f.submit "Confirm" %>
    <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(function () {
    $('#picker').datepicker({
      format: 'yyyy-mm-dd',
      startDate: new Date()
    });
  });
</script>